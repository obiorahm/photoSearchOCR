<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"


    >

    <RelativeLayout
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:background="@drawable/selector_row"
        android:layout_margin="10dp"
        android:padding="0dp"
        android:id="@+id/containing_relative_layout"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/single_food_item"
            android:textColor="@color/white"
            android:padding="15sp"
            android:textSize="20sp"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:src="@drawable/baseline_photo_white_48"
            android:layout_toLeftOf="@id/food_item_options"
            android:backgroundTint="@color/transparent"
            android:id="@+id/show_food_item_image"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_volume_up_white_48dp"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/transparent"
            android:id="@+id/speak_whole_text" />
        <!--android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/speak_whole_text"
            android:layout_toStartOf="@id/speak_whole_text"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:visibility="invisible"
            android:id="@+id/food_item_options" /-->

        <com.google.android.gms.samples.vision.ocrreader.ui.project.InterceptRecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/speak_whole_text"
            android:layout_toStartOf="@id/speak_whole_text"
            android:visibility="gone"
            android:id="@+id/food_item_options"
            android:paddingLeft="15dp"
            android:paddingTop="15dp" />

    </RelativeLayout>


</RelativeLayout>