<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/container_relative_layout">
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/recognized_text"
    android:textColor="@color/quantum_black_secondary_text"
    android:padding="10sp"
    android:textSize="22sp"
        />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/recognized_text"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:src="@drawable/ic_collections_black_48dp"
        android:id="@+id/descriptive_image"/>

</RelativeLayout>






